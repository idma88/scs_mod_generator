trailer : .reefer_pup_2.dolly
{
	accessories[]: .reefer_pup_2.dolly.tchassis
	accessories[]: .reefer_pup_2.dolly.trwheel0
	
	slave_trailer: .reefer_pup_2.second
}

vehicle_accessory: .reefer_pup_2.dolly.tchassis
{
