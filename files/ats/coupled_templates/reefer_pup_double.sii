#########################################
#
#	trailer
#
#########################################

trailer : trailer.reefer_pup_2
{
	accessories[]: .reefer_pup_2.tchassis
	accessories[]: .reefer_pup_2.trwheel0
	accessories[]: .reefer_pup_2.paint_job
	
	slave_trailer: .reefer_pup_2.dolly
}

vehicle_accessory: .reefer_pup_2.tchassis
{
		data_path: "/def/vehicle/trailer/reefer_wabash/chassis.sii"
}

vehicle_wheel_accessory: .reefer_pup_2.trwheel0
{
	offset: 0
		data_path: "%wheel%"
}

vehicle_paint_job_accessory: .reefer_pup_2.paint_job
{
	%color%
		data_path: "%paint_job%"
}

